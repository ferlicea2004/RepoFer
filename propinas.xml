<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="20dp"
  tools:context=".MainActivity">

  <EditText
    android:id="@+id/monto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Monto de la cuenta"
    android:inputType="numberDecimal"
    android:textSize="20sp"
    android:layout_marginBottom="20dp"/>

  <EditText
    android:id="@+id/personas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="NÃºmero de personas"
    android:inputType="number"
    android:textSize="20sp"
    android:layout_marginBottom="20dp"/>

  <!-- Grupo de RadioButtons -->
  <RadioGroup
    android:id="@+id/grupo_propinas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <RadioButton
      android:id="@+id/prop5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="5%"
      android:textSize="20sp"/>

    <RadioButton
      android:id="@+id/prop10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="10%"
      android:textSize="20sp"/>

    <RadioButton
      android:id="@+id/prop15"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="15%"
      android:textSize="20sp"/>
  </RadioGroup>

  <Button
    android:id="@+id/btn_calcular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Calcular"
    android:textSize="20sp"/>

  <TextView
    android:id="@+id/tv_resultado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Propina total: "
    android:textSize="20sp"
    android:layout_marginTop="20dp"/>

  <TextView
    android:id="@+id/tv_porPersona"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Cada persona paga: "
    android:textSize="20sp"
    android:layout_marginTop="10dp"/>
</LinearLayout>
